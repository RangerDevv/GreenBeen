    })
    gsap.to('#lineGraph2',{
        width: lineGraph2Width,
        duration: 1,
        ease: 'power2.inOut',
    })
    gsap.to('#lineGraph3',{
        width: lineGraph3Width,
        duration: 1,
        ease: 'power2.inOut',
    })
    }

    changeGraphButton.addEventListener('click', () => {
        changeGraph()
    })
    }, { once: false})


</script>

