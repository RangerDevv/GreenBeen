<script>
    // create an array that has all the content for the content div and the click of the button will change the content

    let bcontent = [
        "You may qualify for a credit up to $7,500 under Internal Revenue Code Section 30D if you buy a new, qualified plug-in EV or fuel cell electric vehicle (FCV). The Inflation Reduction Act of 2022 changed the rules for this credit for vehicles purchased from 2023 to 2032. <br> <br> <a href='https://www.irs.gov/businesses/irc-30d-new-qualified-plug-in-electric-drive-motor-vehicle-credit' class='bg-green-900 p-2 text-white rounded-lg'>Learn More</a>",
        "As of September 1, 2022, Pennsylvania's Alternative Fuel Vehicle (AFV) Rebate program offers a $2,000 rebate for battery electric cars and trucks, and a $1,500 rebate for PHEVs. The rebate amount is the same for new and pre-owned vehicles. Lower-income families may be eligible for an additional $1,000 rebate if their total household income is below 200 percent of the Federal Income Poverty level. <br> <br> <a href='https://afdc.energy.gov/laws/all?state=PA' class='bg-green-900 p-2 text-white rounded-lg'>Learn More</a>"
    ]

    let button1 = document.getElementById('button1') as HTMLButtonElement
    let button2 = document.getElementById('button2') as HTMLButtonElement
    let button3 = document.getElementById('button3') as HTMLButtonElement
    let content = document.getElementById('content') as HTMLParagraphElement

    button1.addEventListener('click', () => {
        content.innerHTML = bcontent[0]
    })

    button2.addEventListener('click', () => {
        content.innerHTML = bcontent[1]
    })


</script>

