<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Poppins&family=Roboto:wght@700&display=swap');

	:root {
		background-color: #f0eab5;
		color: #0A361E;
		overflow-x: hidden;
		background-image: radial-gradient(#f4a629 0.5px, #f0eab5
 		0.5px);
		background-size: 10px 10px;
		font-family: 'Poppins';
		/* font-family: 'Roboto'; */
	}
	html {

		font-size: 18px;
	}

	/* increase the font sizes depending on how big the screen is but keep it the default size on mobile and 768px */
	@media (min-width: 1440px) {
		html {
			font-size: calc(18px + (24 - 18) * ((100vw - 768px) / (1920 - 768)));
		}
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
	html.lenis {
	height: auto;
	}

	.lenis.lenis-smooth {
	scroll-behavior: auto;
	}

	.lenis.lenis-smooth [data-lenis-prevent] {
	overscroll-behavior: contain;
	}

	.lenis.lenis-stopped {
	overflow: hidden;
	}

	.lenis.lenis-scrolling iframe {
	pointer-events: none;
	}

	/* make the nav <a> element have a underline animation when hovered */
	nav a {
		position: relative;
		text-decoration: none;
		color: #0A361E;
	}

	nav a .text-xl::after {
		content: '';
		position: absolute;
		left: 0;
		bottom: -2px;
		width: 100%;
		height: 2px;
		background-color: #0A361E;
		transform: scaleX(0);
		transform-origin: left;
		transition: transform 0.3s ease;
	}

	nav a:hover::after {
		transform: scaleX(1);
	}

	/* make the dropdown appearn when go green is hovered */
	nav .relative:hover .absolute {
		display: block;
	}

	/* make the dropdown hidden by default */
	nav .absolute {
		display: none;
	}

	/* make the dropdown appear when the dropdown is hovered */
	nav .absolute a:hover::after {
		transform: scaleX(1);
	}

	/* when goGreen is hovered make the dropdown appear */
	nav #goGreen:hover + .relative .absolute {
		display: block;
		animation: fadeIn 1s;
	}

	/* when incentives is hovered open the incentives dropdown */
	nav #incentive:hover + .relative .absolute {
		display: block;
		animation: fadeIn 1s;
	}

	/* have shadows for the navbar go all the way around the navbar */
	nav {
		box-shadow: 0 0 50px 0 rgba(0, 0, 0, 0.3);
	}

	/* make the dropdown appear when the hamburger menu is hovered */
	nav #menu:hover + .origin-top-right {
		display: block;
	}

	/* make the dropdown hidden by default */
	nav .origin-top-right {
		display: none;
	}

	/* make the dropdown appear when the dropdown is hovered */
	nav .origin-top-right a:hover::after {
		transform: scaleX(1);
	}

	/* make the dropdown appear when the dropdown is hovered */
	nav .origin-top-right a:hover {
		background-color: #cbc7a2;
	}

</style>
